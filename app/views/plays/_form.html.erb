<div class="panel-body">
  <%= simple_form_for @play do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories)) %>
    <%= f.input :title, label: "題名" %>
    <%= f.input :description, label: "詳細" %>
    <%= f.input :director, label: "監督" %>
    <%= f.input :url, label: "予告編URL（youtube）" %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= f.file_field :image,  label: "画像"  %>
  <% end %>
</div>