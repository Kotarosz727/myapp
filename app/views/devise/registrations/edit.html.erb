<div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="panel panel-danger">
        <div class="panel-heading"><h2>編集</h2></div>  
        <div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.file_field :avatar %>
      <%= f.input :name, label: "名前"  %>
    <%= f.input :email, label: "メールアドレス", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, 
                label: "パスワード",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "確認用パスワード",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                label: "現在のパスワード",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "編集", class: "btn btn-danger" %>
  </div>
<% end %>
</div>
<div class="panel-footer">
  <h4>削除</h4>
  <p>▶️<%= link_to "ユーザーデリート", registration_path(resource_name), data: { confirm: "さようならです。" }, method: :delete %></p>
</div>
