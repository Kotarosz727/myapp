<% provide(:title, @play.title) %>
<%= link_to (user_path(@user)) do %>
  <h5 class="color-white"><%= @user.name %> のおすすめ映画</h5>
<% end %>  
<div class="row">
  <div class="col-md-4">
    <%= link_to (@play.url) do %>
      <h2><%= image_tag @play.image.variant(resize: "325x475") %></h2>
    <% end %>
    <small class="color-white">画像クリックでyoutube予告編へ（音量注意）</small>
  </div>  
  <div class="col-md-8, play-show">
    <h1><%= @play.title %></h2>
    <h2><%= @play.director %></h2>
    <p><%= @play.description %></p>
  </div>
</div>
<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @play.user_id == current_user.id %>
      <%= link_to "Edit", edit_play_path(@play) %>
      <%= link_to "Destroy", play_path(@play), method: :delete, data: {confirm: "Are you sure ?" } %>
    <% end %>
  <% end %>
</div>