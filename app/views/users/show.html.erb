<div class="row">
  <div class="col-md-6">
    <h2><%= @user.name %>のFavorite Movie</h2>
    <%= image_tag @user.avatar.variant(combine_options:{resize:"300x400^",crop:"300x400+0+0",gravity: :center}) %>
    <% if user_signed_in? %>
      <% if @user.id == current_user.id %>
        <p class="UserProfile">
          <button class="btn btn-primary"><%= link_to "ユーザー編集", edit_user_registration_path(@user) %></button>
          <button class="btn btn-danger"><%= link_to "ユーザー削除", registration_path(@user), data: { confirm: "Really?" }, method: :delete %></button>
        </p>
      <% end %>
    <% end %>    
  </div>
  <div class="col-md-6">
    <% @plays.each do |play| %>  
      <div class="panel panel-primary">
          <div class="panel-heading"><%= play.title %></div>
            <div class="panel-body">
              <%= link_to image_tag(play.image.variant(combine_options:{resize:"250x300^",crop:"250x300+0+0",gravity: :center})),play_path(play), class: "play-index" %>
            </div>
          </div>      
    <% end %>
    </div>    
  </div>
</div>


