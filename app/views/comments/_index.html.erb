<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <p><%= link_to image_tag(comment.user.avatar.variant(combine_options:{resize:"55x55^",crop:"55x55+0+0",gravity: :center, border:'3',bordercolor:'black'})),user_path(comment.user) %> <%= comment.content %></p>
    <% if comment.user == current_user %>
      <p><%= link_to 'コメントを削除する', play_comment_path(comment.play_id, comment.id), method: :delete, remote: true %></p>
    <% end %>
  <% end %>
<% end %>