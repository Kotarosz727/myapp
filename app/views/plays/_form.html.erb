<%= simple_form_for @play do |f| %>
  <%= f.input :title, label: "題名", label_html: { style: 'color:white;' } %>
  <%= f.input :description, label: "詳細", label_html: { style: 'color:white;' } %>
  <%= f.input :director, label: "監督", label_html: { style: 'color:white;' } %>
  <%= f.input :url, label: "予告編URL（youtube）", label_html: { style: 'color:white;' } %>
  <%= f.button :submit, label: "作成", label_html: { style: 'color:white;' } %>
  <%= f.file_field :image,  label: "画像", label_html: { style: 'color:white;' } %>
<% end %> 
