<%= simple_form_for @play do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt =>"Select a category") %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.input :url %>
  <%= f.button :submit  %>
  <%= f.file_field :image %>
<% end %> 
